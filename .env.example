# Database Configuration
# PostgreSQL connection string
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=

# Session Configuration
# Secret key for session encryption - generate a random string
# Example: openssl rand -base64 32
SESSION_SECRET=

# OpenID Connect Authentication
# Configure your OIDC provider (Auth0, Okta, Keycloak, etc.)
# For Auth0: https://YOUR_DOMAIN.auth0.com
# For Okta: https://YOUR_DOMAIN.okta.com/oauth2/default
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Optional: Custom OpenAI base URL (if using a proxy or alternative endpoint)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Node Environment
NODE_ENV=production

# Server Configuration
# Port number for the server (default: 5000)
PORT=5000

# Legacy Environment Variables (Replit compatibility)
# These are kept for backward compatibility but not required for Netlify
# AI_INTEGRATIONS_OPENAI_API_KEY=
# AI_INTEGRATIONS_OPENAI_BASE_URL=
# ISSUER_URL=
# REPL_ID=
